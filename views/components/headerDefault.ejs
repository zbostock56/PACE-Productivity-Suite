<html lang="en">

<head>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-37145897-4"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());

    gtag('config', 'UA-37145897-4');
  </script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/css/style.css">
  <title>Pace Board</title>
</head>

<body>
  <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <h2 class="title">
            <span style="color: #000000; font-size:32">Pace</span>
          </h2>
        </a>

        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false"
          data-target="navbar-ham-menu" id="navbar-ham">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbar-ham-menu" class="navbar-menu">
        <div class="navbar-end">
          <% if(!isAuth){ %>
          <div class="navbar-item">
            <div class="buttons">
              <div style="padding-right: 10px;">
                <a class="button is-info" id="toolbar-signup" href="https://dashback.hype-industries.com/">
                  <strong>Signup for DashBack</strong>
                </a>
              </div>
              <a class="button is-light" id="toolbar-login" href="/login">
                <strong>Log in</strong>
              </a>
            </div>
          </div>
          <% } else {%>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              <%= user.name %>
            </a>

            <div class="navbar-dropdown">
              <a class="navbar-item" href="/profile" style="font-size:14;">
                Profile
              </a>
              <a class="navbar-item" href="/logout" style="font-size:14;">
                Logout
              </a>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <style>
    #toolbar-login {
      background-color: #f0e442;
      color: black;
    }

    #toolbar-login:hover {
      background-color: rgb(197, 183, 52);
      color: black;
      transition-duration: 0.2s;
    }

    #toolbar-signup {
      background-color: #c2c2c2;
      color: black;
    }

    #toolbar-signup:hover {
      background-color: #929292;
      color: black;
      transition-duration: 0.2s;
    }
  </style>
