<script>
    let index;
    $(document).ready(function () {
        $('.shade').click(function (event) {
            hide();
        });

        $('#CloseActionPage').click(function (event) {
            hide();
        });

        $(".bookmark").bind("contextmenu", function (event) {
            event.preventDefault();
            index = $(this).index(".bookmark");
            $("context-menu li").toggle();
            $(".context-menu").finish().toggle(100).

                css({
                    top: event.pageY + "px",
                    left: event.pageX + "px"
                });
        });

        // If the document is clicked somewhere
        $(document).bind("mousedown", function (e) {
            if (!$(e.target).parents(".context-menu").length > 0) {
                $(".context-menu").hide(100);
            }
        });


        // If the menu element is clicked
        $(".context-menu li").click(function () {
            switch ($(this).attr("data-action")) {
                case "first": show(); break;
                case "second": show(); break;
                case "third": show(); break;
            }

            $(".context-menu").hide(100);
        });
    });

    function show() {
        $(".shade").fadeIn();
        $(".action-page").eq(index).fadeIn();
    }

    function hide() {
        $(".shade").fadeOut();
        $(".action-page").fadeOut();
